#!/bin/bash

options=$(echo -e "ï€‘  Poweroff\nïƒ¢  Restart\nï††  Suspend\nðŸ–µ Display Off\nðŸ–µ Display Reset\nï‚‹  Logout")

selected_option=$(echo -e "$options" | rofi -dmenu -i -mesg "Bye "$USER"!" -config ~/.config/rofi/power.rasi)

# Handle the selected option
case $selected_option in
"ï€‘  Poweroff")
  systemctl poweroff
  ;;
"ïƒ¢  Restart")
  systemctl reboot
  ;;
"ï††  Suspend")
  systemctl suspend
  ;;
"ðŸ–µ Display Off")
  xset dpms force off
  ;;
"ðŸ–µ Display Reset")
  xset s off
  xset -dpms
  xset s noblank
  ;;
"ï‚‹  Logout")
  pkill -KILL -u "$USER"
  ;;
esac
